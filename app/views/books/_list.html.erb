<div class="container">
  <div class="row">
    <div class="col-md-3">

<body>
  <h1>User info</h1>
<div>
  <p><%= image_tag @user.get_profile_image(100,100) %></p>
  <p>name : <%= @user.name %></p>
  <h3>introduction</h3>
  <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
