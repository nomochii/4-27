
<%= render 'books/list', newbook: @newbook,user: @user %>

<% @books.each do |book| %>
<div>
  <%= link_to book_path(book.id) do %>
    <p>Title：<%= book.title %></p>
  <% end %>

  <p>Opinion：<%= book.opinion %></p>
  <p>投稿ユーザー画像：<%= image_tag @user.get_profile_image(100,100) %></p>
  <p>name：<%= book.user.name %></p>
</div>
<% end %>
