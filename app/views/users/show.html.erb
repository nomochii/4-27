
<div class="container">
  <div class="row">
    <div class="col-md-3">

      <%= render 'books/list', newbook: @newbook,user: @user %>
    </div>


    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="teble">
        <thead>
    		  <tr>
    			  <th>Title</th>
    		  	<th>Opinion</th>
    		  </tr>
      	</thead>

        <% @books.each do |book| %>
          <tbody>
            <tr>
              <td><%= image_tag book.user.get_profile_image(100,100) %></td>
              <td><%= link_to book.title,book_path(book.id)%></td>
              <td><%= book.opinion %></td>
            </tr>
          </tbody>
        </table>
        <p></p>
      <% end %>

    </div>
  </div>
</div>

