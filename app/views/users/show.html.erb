
<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
  </head>

<div class="container">
  <div class="row">
    <div class="col-md-3">

<body>
  <h1>User info</h1>
<div>
  <p><%= image_tag @user.get_profile_image(100,100) %></p>
  <p>name : <%= @user.name %></p>
  <h3>introduction</h3>
  <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
</div>

<h1>New book</h1>
  <%= form_with model: @book do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :opinion %>
    <div>
      <%= f.submit 'Create Book' %>
    </div>
  <% end %>
    </div>

<div class="col-md-8 offset-md-1">

<h1>Books</h1>
<% @books.each do |book| %>
<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

<div>
  <%= link_to book_path(book.id) do %>
  <% end %>
  <p>投稿ユーザー画像：<%= image_tag book.user.get_profile_image(100,100) %></p>
  <p>Title：<%= book.title %></p>
  <p>Opinion：<%= book.opinion %></p>
  <p>name：<%= book.user.name %></p>
</div>
<% end %>

    </div>
  </div>
</div>

<footer>
  <p>CopyRight Infratop.inc</p>
</footer>