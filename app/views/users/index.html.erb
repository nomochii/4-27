<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
  </head>

<body>
  <h1>User info</h1>
<div>
  <p><%= image_tag @user.user.get_profile_image(100,100) %></p>
  <h3>name : <%= @user.name %></h3>
  <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
</div>

<h1>New book</h1>
  <%= form_with model: @book do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :opinion %>
    <div>
      <%= f.submit 'Create Book' %>
    </div>
  <% end %>
  
<%= render 'list' %>
<h1>Book detail</h1>

<% @books.each do |book| %>

  <p>Title</p>
  <%= link_to book_path(book.id) do %>
  <p>Title：<%= book.title %></p>
  <% end %>
  <p>Opinion：<%= book.opinion %></p>
  <!--<p>投稿ユーザー画像：<%#= image_tag book.user.get_profile_image(100,100) %></p>-->
  <p><%= link_to book.user.name do %></p>


<footer>
  <div class='container mt-5'>
  	<div class='row'>
    	<div class='mx-auto'>
    		<p>CopyRight Infratop.inc</p>
    	</div>
    </div>
  </div>
</footer>
  </body>
</html>



